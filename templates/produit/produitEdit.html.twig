{% extends 'base.html.twig' %}

{% block title %}edit produit
{% endblock %}

{% block body %}
	<div class="container my-5">
		<h2 class="text-center ml-5" id="ml2">تعديل أو حذف طبق</h2>
		{{ form_start(form) }}
		{{ form_widget(form) }}
		<button class='btn btn-success'>تعديــل</button>

		<!-- Button trigger modal -->
		<button type="button" class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">حذف</button>

		<!-- Modal -->
		<div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
			<div class="modal-dialog">
				<div class="modal-content">
					<div class="modal-header">
					<!--	<h5 class="modal-title" id="exampleModalLabel">Modal title</h5> -->
						<button type="button" class="close" data-dismiss="modal" aria-label="Close">
							<span aria-hidden="true">&times;</span>
						</button>
					</div>
					<div class="modal-body">
						هل أنت متأكد من حذف طبق <strong>{{form.vars.value.name}}</strong>؟
					</div>
					<div class="modal-footer">
						<button type="button" class="btn btn-secondary" data-dismiss="modal">تراجع</button>
						<a href="{{ path ("produit_delete", {"id":form.vars.value.id}) }}" class='btn btn-danger'>حذف</a>
					</div>
				</div>
			</div>
		</div>

		

	</div>
{% endblock %}
